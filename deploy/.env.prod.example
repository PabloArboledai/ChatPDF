# Dominio público apuntando a tu VPS (A/AAAA)
DOMAIN=chatpdf.tudominio.com

# Recomendado para ACME / Let's Encrypt
ACME_EMAIL=tu-email@tudominio.com

# Base de datos
POSTGRES_DB=chatpdf
POSTGRES_USER=chatpdf
POSTGRES_PASSWORD=CAMBIA_ESTA_PASSWORD_LARGA

# App
ENVIRONMENT=prod
DATA_DIR=/data

# Normalmente no hace falta CORS si accedes vía la Web (same-origin)
# CORS_ORIGINS=https://chatpdf.tudominio.com
CORS_ORIGINS=

# Interno (no expuesto)
API_INTERNAL_BASE_URL=http://api:8000
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1
